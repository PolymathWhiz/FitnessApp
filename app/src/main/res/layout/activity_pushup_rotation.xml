<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="co.maplerad.fitnessapp.PushupRotationActivity">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/textView"
        android:background="@drawable/rot"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/imageView"
        android:layout_marginTop="50dp"
        android:layout_margin="22dp"
        android:text="Perform a push-up, then shift slowly turn your toes, knees, and hips to one side as you reach one arm up to the ceiling and stack one foot on top of another. Slowly lower back to your starting push up position and then repeat to the other side."
        android:padding="20dp"
        android:layout_gravity="center"
        android:id="@+id/textView" />


</RelativeLayout>