<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:clipToPadding="false"
    tools:context="co.maplerad.fitnessapp.SevenMinutesActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:text="@string/sexy_legs" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="A routine for sexy legs without any special equipment , but with spectacular results" />

        <android.support.v7.widget.CardView
            android:id="@+id/jumping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:elevation="2dp"
            android:padding="30px"
            android:tag="1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_column="0"
                    android:layout_marginRight="5dip"
                    android:padding="3dip">

                    <ImageView
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ge13" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="40dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Jumping Jack"
                        android:textColor="#343434"
                        android:textSize="14dip" />


                </RelativeLayout>

            </GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wallsit"
            android:elevation="2dp"
            android:tag="2"
            android:padding="5dip"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">

                <LinearLayout
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip" >
                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:src="@drawable/ge2" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="@string/wall_sit"
                        android:layout_marginTop="40dp"
                        android:textColor="#343434"
                        android:textSize="14dip"
                        android:maxLines="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

            </GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pushup"
            android:elevation="2dp"
            android:tag="4"
            android:padding="5dip"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">

                <LinearLayout
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip">
                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:src="@drawable/ge8" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="@string/pushup"
                        android:textColor="#343434"
                        android:layout_marginTop="40dp"
                        android:textSize="14dip"
                        android:maxLines="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

            </GridLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/crunch"
            android:elevation="2dp"
            android:tag="5"
            android:padding="5dip"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">

                <LinearLayout
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip" >
                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:src="@drawable/ge4" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="@string/crunch"
                        android:layout_marginTop="40dp"
                        android:textColor="#343434"
                        android:textSize="14dip"
                        android:maxLines="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

            </GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/squat"
            android:elevation="2dp"
            android:tag="6"
            android:padding="5dip"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">

                <LinearLayout
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip" >
                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:src="@drawable/ge39" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/schoolName"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="@string/squat"
                        android:layout_marginTop="40dp"
                        android:textColor="#343434"
                        android:textSize="14dip"
                        android:maxLines="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

            </GridLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>